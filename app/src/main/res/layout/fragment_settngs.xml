<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainFragments.SettngsFragment"
    android:orientation="vertical">
    <com.google.android.material.button.MaterialButton
        style="@style/Themes.Project.AboutButton"
        android:id="@+id/about_application_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_marginTop="5dp"
        app:icon="@drawable/ic_about_application"
        app:iconSize="30dp"
        android:textSize="25sp"
        android:insetLeft="10dp"
        android:textAlignment="textStart"
        />
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />
    <com.google.android.material.button.MaterialButton
        style="@style/Themes.Project.AboutButton"
        android:id="@+id/change_username_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Username"
        android:layout_marginTop="5dp"
        app:icon="@drawable/ic_rename_username"
        app:iconSize="30dp"
        android:textSize="25sp"
        android:insetLeft="10dp"
        android:textAlignment="textStart"
        />

</androidx.appcompat.widget.LinearLayoutCompat>