<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B8E6B7</item>
        <item name="colorPrimaryVariant">#006C65</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="buttonStyle">@style/Widget.Material3.Button.OutlinedButton</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#100F0F</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Widget.Project.PlantConfirmationCardView" parent="Theme.AndroidProject">
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/text_gray</item>
    </style>

    <style name="Widget.Project.PlantCardLayout" parent="Theme.AndroidProject">
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@color/background_black</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/text_gray</item>
    </style>
    <style name="Widget.Project.ActionBar" parent="Widget.Material3.BottomAppBar">
        <item name="backgroundTint">#90DA8E</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.Project.PlantDetailButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconTint">@color/text_gray</item>
    </style>

    <style name="Widget.Project.Fab" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">#ffe66e</item>
        <item name="tint">@color/background_black</item>
    </style>
    <style name="Widget.Project.Scan" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">#C4EAE7</item>
        <item name="fabCustomSize">53dp</item>
        <item name="tint">@color/background_black</item>
    </style>
    <style name="Widget.Project.Add" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">#D5F1A3</item>
        <item name="fabCustomSize">53dp</item>
        <item name="tint">@color/background_black</item>
    </style>

    <style name="Widget.Project.PlantDetailsCardLayout" parent="Theme.AndroidProject">
        <item name="cardElevation">10dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">#201F23</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Widget.Project.ReminderCardLayout" parent="Theme.AndroidProject">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.Project.WikiStyle" parent="Widget.Material3.Button.OutlinedButton">
    </style>

    <style name="Themes.Project.NotesLayout" parent="Widget.Material3.FloatingActionButton.Primary">
    </style>
    <style name="Themes.Project.AboutButton" parent="Theme.AndroidProject">
        <item name="cornerRadius">0dp</item>
        <item name="elevation">10dp</item>
        <item name="backgroundTint">@color/background_black</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="iconTint">@color/text_gray</item>
    </style>
    <style name="Widget.Project.AccountCard" parent="Theme.AndroidProject">
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@color/background_black</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/text_gray</item>
    </style>

    <style name="Themes.Project.NotesEditText" parent="Theme.AndroidProject">
        <item name="android:background">#4B4853</item>
    </style>
    <style name="Widget.Project.showLogOut" parent="Widget.Material3.Button.OutlinedButton">
        <item   name="iconTint">@color/text_gray</item>
        <item name="android:background">@drawable/logout_background</item>
    </style>
    <style name="Widget.Project.CamBackStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item   name="iconTint">@color/text_gray</item>
    </style>
    <style name="Widget.Project.NotesBackStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item   name="iconTint">@color/text_gray</item>
    </style>
    <style name="Widget.Project.SaveNotes" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">#D5F1A3</item>
        <item name="tint">@color/background_black</item>
        <item name="fabCustomSize">60dp</item>
    </style>
    <style name="Widget.Project.LoginTextInput" parent="Theme.AndroidProject">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>
    <style name="Widget.Project.LoginCardView" parent="Theme.AndroidProject">
        <item name="cardBackgroundColor">#E2EFCA</item>
        <item name="cardElevation">5dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/text_gray</item>
    </style>
    <style name="Widget.Project.LoginBodyCardView" parent="Theme.AndroidProject">
        <item name="cardElevation">5dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/text_gray</item>
    </style>

    <style name="Themes.Project.LogOutButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">10dp</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="Widget.Project.OpenPlantNotesStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconTint">@color/text_gray</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="Themes.Project.SignInButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">5dp</item>
        <item name="elevation">10dp</item>
    </style>
</resources>