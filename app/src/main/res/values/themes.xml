<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00A499</item>
        <item name="colorPrimaryVariant">#006C65</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSecondaryContainer">#746CE89C</item>
        <item name="fontFamily">@font/lato</item>

    </style>
    <style name="Widget.Project.ActionBar" parent="Widget.Material3.BottomAppBar">
        <item name="backgroundTint">#F096EAB6</item>
    </style>
    <style name="Widget.Project.Fab" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">#ffe66e</item>
    </style>
    <style name="Widget.Project.Scan" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">#C4EAE7</item>
