<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00A499</item>
        <item name="colorPrimaryVariant">#006C65</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSecondaryContainer">#746CE89C</item>
        <item name="fontFamily">@font/lato</item>

        <item name="android:windowBackground">#fefcf6</item>
    </style>
    <style name="Widget.Project.ActionBar" parent="Widget.Material3.BottomAppBar">
        <item name="backgroundTint">#ACEAAA</item>
    </style>
    <style name="Widget.Project.Fab" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">#ffe66e</item>
    </style>
    <style name="Widget.Project.Scan" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">#C4EAE7</item>
        <item name="fabCustomSize">53dp</item>

    </style>
    <style name="Widget.Project.Add" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">#D5F1A3</item>
        <item name="fabCustomSize">53dp</item>
    </style>
    <style name="Widget.Project.LoginCardView" parent="Theme.AndroidProject">
        <item name="cardBackgroundColor">#E2EFCA</item>
        <item name="cardElevation">5dp</item>

    </style>
    <style name="Widget.Project.LoginBodyCardView" parent="Theme.AndroidProject">
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>
    <style name="Widget.Project.cutCardView" parent="Theme.AndroidProject">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="Widget.Project.cutTopCardView" parent="Theme.AndroidProject">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="Widget.Project.LoginTextInput" parent="Theme.AndroidProject">
        <item name="boxBackgroundColor">#eceae5</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Project.AccountCard" parent="Theme.AndroidProject">
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">#f5f4eb</item>
    </style>
    <style name="ProgressBar" parent="Theme.AndroidProject">
        <item name="colorAccent">#528A3E</item>
    </style>

    <style name="Widget.Project.PlantConfirmationCardView" parent="Theme.AndroidProject">
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">#f5f4eb</item>
    </style>
    <style name="Widget.Project.PlantCardLayout" parent="Theme.AndroidProject">
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">#f5f4eb</item>
    </style>



</resources>